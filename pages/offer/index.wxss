/* pages/openlock/index.wxss */

.open-list {
  height: 280rpx;
  margin-bottom: 20rpx;
}

.top {
  height: 70rpx;
  padding: 0 20rpx;
  line-height: 70rpx;
  font-size: 37rpx;
  color: #dfdfdf;
}

.down {
  height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #222;
}

.down-l {
  width: 50%;
  font-size: 27rpx;
  color: #5a5a5a;
}

.down-r image {
  width: 25rpx;
  height: 30rpx;
  margin-top: 5rpx;
  margin-left: 10rpx;
}

.down-r text {
  font-size: 27rpx;
}

.down navigator {
  width: 160rpx;
  height: 100%;
  float: right;
}

.center {
  height: 110rpx;
  padding: 25rpx 20rpx;
}

.center>view {
  width: 150rpx;
  height: 60rpx;
  color: #fc3;
  line-height: 30rpx;
  border-radius: 60rpx;
  border: 1rpx solid #fc3;
  font-size: 27rpx;
  text-align: center;
  padding: 15rpx 20rpx;
  margin-left: 20rpx;
}

.center image {
  width: 35rpx;
  float: left;
}

.choose-edit {
  position: fixed;
  top: 200rpx;
  width: 616rpx;
  left: 67rpx;
  border-radius: 10rpx;
  overflow: hidden;
  z-index: 20;
}

.choose-title {
  height: 85rpx;
  line-height: 85rpx;
  font-size: 29rpx;
}

.choose-list {
  width: 100%;
  height: 105rpx;
  line-height: 105rpx;
  background-color: #424242;
  border-bottom: 1rpx solid #222;
  font-size: 29rpx;
  padding: 0 20rpx;
}

.choose-list image {
  width: 42rpx;
  height: 42rpx;
  margin-top: 30rpx;
}
