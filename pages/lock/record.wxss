/* pages/lock/record.wxss */
.record-title{
  width:100%;
  height: 210rpx;
  padding: 35rpx 25rpx;
}
.record-title .logo{
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  overflow: hidden;
}
.record-title .logo image{
  width: 100%;
  height: 100%;
}
.mes-id text:nth-of-type(1){
  font-size: 37.5rpx;
}
.mes-id text:nth-of-type(2){
  font-size: 27rpx;
  color:#333;
  width: 135rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 40rpx;
  border-radius: 5rpx;
  margin-top: 7rpx;
}
.mes-phone{
  font-size: 25rpx;
  margin-top: 20rpx;
  clear: both;
}
.record-cont .list{
  width: 100%;
  height: 107rpx;
  padding: 0 20rpx;
  line-height: 107rpx;
  font-size: 33rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #222;
}
.record-cont .list-h3{
  width: 100%;
  height: 71rpx;
  border-bottom: 1rpx solid #222;
  padding: 0 20rpx;
  font-size: 27rpx;
  line-height: 71rpx;
}
.list-h3 text{
  padding-left: 20rpx;
  border-left: 5rpx solid #fc3;
}