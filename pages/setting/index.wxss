/* pages/setting/index.wxss */
.set-top{
  padding: 20rpx;
  background: linear-gradient(135deg, #fffae7, #ddd1ac)
}
.set-top .icon{
  width: 158rpx;
  height: 158rpx;
  border-radius: 158rpx;
  overflow: hidden;
  margin: 0 auto;
  border: 10rpx solid #c7b888;
}
.icon image{
  width: 100%;
  height: 100%;
}
.name text{
  font-size: 37rpx;
  color: #5a5a5a;
}
.id text{
  font-size: 25rpx;
  color: #5a5a5a;
}
.set-mes{
  width:100%;
  height: 137rpx;
  border-top: 1rpx solid #222;
  border-bottom: 1rpx solid #222;
  padding: 20rpx;
}
.set-mes .phone,.set-mes .time{
  width: 50%;
  padding-left: 50rpx;
}
.set-mes .time{
  border-left: 1rpx solid #222;
}
.set-mes .h3{
  font-size: 25rpx;
}
.set-mes .p{
  font-size: 33rpx;
  margin-top: 10rpx;
}
.infor{
  width: 100%;
  height:106rpx;
  padding: 0 20rpx;
  line-height: 106rpx;
  font-size: 33rpx;

}
.infor image{
  width: 25rpx;
  height: 30rpx;
  margin-top: 40rpx;
}
.infor text{
  color: #5a5a5a;
}
.set-item .list{
  width: 100%;
  height: 107rpx;
  line-height: 107rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.set-item .icon{
  width: 56rpx;
  height: 56rpx;
  margin-top: 25rpx;
}
.set-item .next{
  width: 25rpx;
  height: 30rpx;
  margin-top: 40rpx;
}
.set-item .list text{
  margin-left: 40rpx;
  font-size: 33rpx;
  color:#5a5a5a;
}
.set-btn button{
  width: 650rpx;
  height: 92rpx;
  border-radius: 92rpx;
  font-size: 31rpx;
  line-height: 92rpx;
  margin-top: 50rpx;
}
.list navigator{
  width: 100%;
  height: 100%;
  display: block;
}